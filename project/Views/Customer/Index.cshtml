@{
    Layout = "_Layout";
}
@model List<WebApi.Models.Customer>

<div class="container mt-5">
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Adı</th>
            <th scope="col">Soy Adı</th>
            <th scope="col">Phone</th>
            <th scope="col">İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th scope="row">@customer.CustomerID</th>
                <td>@customer.Name</td>
                <td>@customer.Surname</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a href="#" class="btn btn-warning btn-sm text-white" title="Düzenle">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="#" class="btn btn-danger btn-sm" title="Sil">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="text-right mt-3">
        <button class="btn btn-success float-right">Ekle</button>
    </div>


   
</div>

