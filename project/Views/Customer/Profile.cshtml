@model List<WebApi.Models.Comment>

<!-- Rest of your Razor code here -->

<div class="container mt-5">
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            @if (Model != null && Model.Count > 0)
                    {
                        var data = Model[0]; // Assuming it's a list with at least one item
            
                        <tr>
                            <p>Customer Name: @data.Customer.Name</p>
                        </tr>
                    }
            <th> Yorumlar</th>
        </tr>
        </thead>
        <tbody>
        

        
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Text</td>
            </tr>
        }


        </tbody>
    </table>
</div>