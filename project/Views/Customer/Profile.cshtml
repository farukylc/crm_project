@model WebApi.Models.CustomerProfileViewModel

<style>
    table {
        table-layout: fixed;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        overflow: hidden;
    }

    th,
    td {
        overflow: hidden;
        text-overflow: ellipsis;
        color: white;
    }

    .customer-name {
        color: #28a745; /* Green color for customer name */
    }
</style>

<div class="container mt-5">
    <!-- Customer Table -->
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col"><i class="fas fa-user"></i> Adı</th>
            <th scope="col"><i class="fas fa-user"></i> Soyadı</th>
            <th scope="col"><i class="fas fa-phone"></i> Telefon</th>
            <th scope="col"><i class="fas fa-envelope"></i> Email</th>
            <th scope="col"><i class="fas fa-map-marker-alt"></i> Adress</th> 
        </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Customer != null)
        {
            <tr>
                <td class="customer-name">@Model.Customer.Name</td>
                <td class="customer-name">@Model.Customer.Surname</td>
                <td class="customer-name">@Model.Customer.PhoneNumber</td>
                <td class="customer-name">@Model.Customer.Email</td>
                <td class="customer-name">@Model.Customer.Address</td>
                
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="container mt-5">
    <!-- Comments Table -->
    <div class="container mt-5">
        <!-- Comments Table -->
        @if (Model.Comments != null && Model.Comments.Any())
        {
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">
                            <i class="fa-solid fa-comments" 
                               style="color: #ffffff; margin-right: 5px; "></i>
                            Yorumlar</th> 

                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model.Comments)
                    {
                        <tr>
                            <td>@comment.Text</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Yorum Yok</p>
        }
    </div>

    @if (Model.Orders != null && Model.Orders.Any())
        {
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col"> <i class="fa-solid fa-boxes-stacked" 
                                            style="margin-right: 5px; color: #ffffff;"></i>
                            Ürünler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.Product.ProductName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Henüz ürün almamış</p>
        }
</div>

@{
    Layout = "_Layout";
}