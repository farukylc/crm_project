@{
    Layout = "_Layout";
}
@model List<WebApi.Models.Comment>

@using Microsoft.AspNetCore.Mvc

<style>
    table {
        table-layout: fixed;
        width: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        overflow: hidden;
        color: white;
    }

    th, td {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        padding: 10px;
        vertical-align: middle; /* Vertical alignment added */

    }

    .actions-column {
        width: 150px; 
    }

    .btn-group {
        margin: 0;
    }

    .btn {
        border-radius: 5px;
        margin-right: 5px;
    }

    .btn-success {
        margin-top: 10px;
    }

    .image-column {
        max-width: 50px; /* Adjust max-width for the image column */
        overflow: hidden;
    }

    .image-column img {
        width: 50%;
        height: auto;
    }
</style>

<div class="container mt-5">
    <table class="table table-striped table-dark">
        <thead>
        <tr>
            <th scope="col">Müşteri Adı</th>
            <th scope="col" class="image-column">Ürün</th>
            <th scope="col">Yorum Tarihi</th>
            <th scope="col">Yorum</th>

        </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <th scope="row">@comment.Customer?.Name ?? "N/A"</th>
                    <td>@comment.Product?.ProductName ?? "N/A"</td>
                    <td>@comment.CommentDate?</td>
                    
                    <td>@comment.Text</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
