@{
    Layout = "_Layout";
}
@model List<WebApi.Models.Product>
@using Microsoft.AspNetCore.Mvc

<style>
    table {
        table-layout: fixed;
        width: 100%;
    }

    th, td {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .actions-column {
        width: 150px; 
    }
</style>

<div class="container mt-5">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Rate Amount</th>
                <th scope="col">Sales Amount</th>
                <th scope="col">Cost</th>
                <th scope="col" class="actions-column">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th scope="row">@product.ProductID</th>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.RateAmount</td>
                    <td>@product.SalesAmount</td>
                    <td>@product.Cost</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Product Actions">
                            <form method="post" action="@Url.Action("DeleteOneProduct", "Product")">
                                <input type="hidden" name="id" value="@product.ProductID" />
                                <button type="submit" class="btn btn-danger btn-sm text-white" title="Delete">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>

                            <form method="post" action="@Url.Action("GetProfile", "Product")">
                                <input type="hidden" name="id" value="@product.ProductID" />
                                <button type="submit" class="btn btn-info btn-sm text-white" title="Profile">
                                    <i class="fas fa-user-circle"></i> Profile
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="btn btn-success float-right text-right mt-3">
        @Html.ActionLink(" Add New Product", "CreateProductPage", "Product", null, new { style = "color: white; text-decoration: none;" })
    </div>
</div>
