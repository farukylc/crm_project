@model WebApi.Models.Product

@{
    ViewBag.Title = "Create Product";
    Layout = "_Layout";
}

<h2>Ürün Oluştur</h2>

@using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <div class="form-group">
                    @Html.LabelFor(model => model.ProductName, "Ürün Adı")
                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", placeholder = "Ürün Adını Giriniz", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price, "Fiyat")
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">₺</span>
                        </div>
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Fiyatı Giriniz", type = "number", step = "0.01", required = "required" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.SalesAmount, "Satış Miktarı")
                    @Html.TextBoxFor(model => model.SalesAmount, new { @class = "form-control", placeholder = "Satış Miktarını Giriniz", type = "number", step = "0.01", required = "required" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Stars, "Yıldız Sayısı")
                    @Html.TextBoxFor(model => model.Stars, new { @class = "form-control", placeholder = "Yıldız Sayısını Giriniz", type = "number", step = "0.1", min = "0", max = "5", required = "required" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.imgUrl, "Resim URL")
                    @Html.TextBoxFor(model => model.imgUrl, new { @class = "form-control", placeholder = "Resim URL'sini Giriniz", required = "required" })
                </div>

                <div class="form-group">
                    <input type="submit" style="margin-top: 10px;" value="Oluştur" class="btn btn-primary float-right" />
                </div>

            </div>
        </div>
    </div>
}
