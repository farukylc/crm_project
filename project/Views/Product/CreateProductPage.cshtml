@model WebApi.Models.Product

@{
    ViewBag.Title = "Create Product";
    Layout = "_Layout";
}

<h2>Create Product</h2>

@using (Html.BeginForm("CreateProduct", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <div class="form-group">
                    @Html.LabelFor(model => model.ProductName)
                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Price)
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.SalesAmount)
                    @Html.TextBoxFor(model => model.SalesAmount, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Stars)
                    @Html.TextBoxFor(model => model.Stars, new { @class = "form-control" })
                </div>
                
                <div class="form-group">
                                    @Html.LabelFor(model => model.imgUrl)
                                    @Html.TextBoxFor(model => model.imgUrl, new { @class = "form-control" })
                                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>